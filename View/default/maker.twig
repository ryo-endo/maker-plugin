{%  set ProductMaker = getProductMaker(product_id) %}

{% if ProductMaker %}
    {%  set maker_name = ProductMaker.Maker.name %}
    {%  set maker_url = ProductMaker.maker_url %}

    {% if maker_name %}
        <p class="item_code">メーカーコード： {{ maker_name }}</p>
    {% endif %}

    {% if maker_url %}
        <p class="item_code">メーカーURL： <a href="{{ maker_url }}" target="_blank">{{ maker_url }}</a></p>
    {% endif %}
{% endif %}

